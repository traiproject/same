# Multiple tools in isolated environment
exec same run --ci multi-tool
stdout 'golangci-lint'
stdout 'go1.25'

-- same.work.yaml --
version: "1"
root: "."
tools:
  go: go@1.25.4
  lint: golangci-lint@2.7.2
projects: ["."]

-- same.yaml --
version: "1"
project: test
tasks:
  multi-tool:
    cmd: ["sh", "-c", "go version && golangci-lint version"]
    tools: ["go", "lint"]
